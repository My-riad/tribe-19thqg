{
  "name": "tribe-backend",
  "version": "1.0.0",
  "description": "Backend services for the Tribe platform - an AI-powered matchmaking and engagement platform for meaningful small-group connections",
  "private": true,
  "workspaces": [
    "src/shared",
    "src/api-gateway",
    "src/auth-service",
    "src/profile-service",
    "src/tribe-service",
    "src/matching-service",
    "src/event-service",
    "src/engagement-service",
    "src/planning-service",
    "src/payment-service",
    "src/notification-service",
    "src/ai-orchestration-service"
  ],
  "scripts": {
    "build": "bash scripts/build.sh",
    "clean": "rimraf **/dist",
    "lint": "bash scripts/lint.sh",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "test": "bash scripts/test.sh",
    "test:unit": "jest --testPathIgnorePatterns=tests/",
    "test:integration": "jest --config=tests/jest.config.js tests/integration",
    "test:e2e": "jest --config=tests/jest.config.js tests/e2e",
    "test:load": "k6 run tests/load/",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "ts-node scripts/db-seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:services\"",
    "dev:shared": "cd src/shared && npm run build -- --watch",
    "dev:services": "docker-compose up",
    "dev:local": "concurrently \"npm run dev:shared\" \"nodemon --exec ts-node src/api-gateway/src/index.ts\"",
    "start": "node dist/index.js",
    "prepare": "npm run db:generate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "tribe",
    "matchmaking",
    "ai",
    "microservices",
    "engagement",
    "social"
  ],
  "author": "Tribe Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^4.16.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.16.0",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}