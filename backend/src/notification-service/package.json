  "version": "1.0.0",
  "description": "Notification service for the Tribe platform - handles push notifications, emails, and in-app alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
