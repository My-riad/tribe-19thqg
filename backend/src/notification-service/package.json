  "dependencies": {
    "@tribe/shared": "^1.0.0",
    "axios": "^1.4.0",
    "axios-retry": "^3.5.0",
    "bull": "^4.10.4",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "express-rate-limit": "^6.7.0",
    "firebase-admin": "^11.5.0",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
