    "on-finished": "^2.4.1",
    "p-queue": "^7.3.4",
    "pino": "^8.14.1",
    "prom-client": "^14.2.0",
    "rate-limit-redis": "^3.0.0",
    "socket.io": "^4.7.1",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
