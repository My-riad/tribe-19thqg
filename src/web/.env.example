# Set the environment (development, staging, production)
NODE_ENV=development

# API Configuration
# Base URL and settings for API communication
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Authentication Settings
# Configuration for authentication and session management
AUTH_TOKEN_EXPIRY_BUFFER=300000
AUTH_SESSION_TIMEOUT=86400000

# Feature Flags
# Enable/disable specific application features
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_AI_ENGAGEMENT=true
ENABLE_AUTO_MATCHING=true
ENABLE_LOCATION_TRACKING=true
ENABLE_PAYMENT_SPLITTING=true
ENABLE_ACHIEVEMENTS=true

# Timing Configuration
# Intervals for various application operations (in milliseconds)
LOCATION_UPDATE_INTERVAL=300000
CHAT_TYPING_INDICATOR_TIMEOUT=3000
NOTIFICATION_POLLING_INTERVAL=60000
ACTIVITY_REFRESH_INTERVAL=120000
TRIBE_REFRESH_INTERVAL=300000
EVENT_REFRESH_INTERVAL=300000

# Storage Limits
# Configuration for data storage and caching
CHAT_HISTORY_LIMIT=100
OFFLINE_STORAGE_LIMIT=50000000
MEDIA_CACHE_LIMIT=100000000
CACHE_EXPIRY=86400000

# Application Limits
# Business rule constraints
MAX_TRIBES_PER_USER=3
MAX_MEMBERS_PER_TRIBE=8
MIN_MEMBERS_PER_TRIBE=4
MAX_EVENTS_PER_TRIBE=10
MAX_MESSAGE_LENGTH=1000
MAX_BIO_LENGTH=500
MAX_UPLOAD_SIZE=10000000

# Application Metadata
# Version information
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Development Tools
# Settings for debugging and development
ANALYTICS_ENABLED=false
ENABLE_API_MOCKING=true
ENABLE_CONSOLE_LOGS=true
ENABLE_DEBUG_TOOLS=true

# External Service Credentials
# API keys and credentials for third-party services

# AI Services
# OpenRouter API for AI capabilities
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Authentication Provider
# Auth0 credentials
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_DOMAIN=your-tenant.auth0.com

# Payment Processing
# Stripe integration for payments
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Location Services
# Google Places API for location data
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Push Notifications
# Firebase configuration for notifications
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here

# Event Discovery
# APIs for finding local events
EVENTBRITE_API_KEY=your_eventbrite_api_key_here
MEETUP_API_KEY=your_meetup_api_key_here

# Weather Data
# Weather information for activity planning
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Error Tracking
# Sentry for error monitoring
SENTRY_DSN=your_sentry_dsn_here