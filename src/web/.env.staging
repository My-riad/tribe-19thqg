NODE_ENV=staging
APP_VERSION=1.0.0
BUILD_NUMBER=1

# API Configuration
API_BASE_URL=https://staging-api.tribeapp.com/api
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Authentication Settings
AUTH_TOKEN_EXPIRY_BUFFER=300000
AUTH_SESSION_TIMEOUT=86400000

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_AI_ENGAGEMENT=true
ENABLE_AUTO_MATCHING=true
ENABLE_LOCATION_TRACKING=true
ENABLE_PAYMENT_SPLITTING=true
ENABLE_ACHIEVEMENTS=true

# Time Intervals (in milliseconds)
LOCATION_UPDATE_INTERVAL=300000
CHAT_TYPING_INDICATOR_TIMEOUT=3000
NOTIFICATION_POLLING_INTERVAL=60000
ACTIVITY_REFRESH_INTERVAL=120000
TRIBE_REFRESH_INTERVAL=300000
EVENT_REFRESH_INTERVAL=300000

# Content Limits
CHAT_HISTORY_LIMIT=100
OFFLINE_STORAGE_LIMIT=50000000
MEDIA_CACHE_LIMIT=100000000
CACHE_EXPIRY=86400000
MAX_TRIBES_PER_USER=3
MAX_MEMBERS_PER_TRIBE=8
MIN_MEMBERS_PER_TRIBE=4
MAX_EVENTS_PER_TRIBE=10
MAX_MESSAGE_LENGTH=1000
MAX_BIO_LENGTH=500
MAX_UPLOAD_SIZE=10000000

# Third-Party Services
OPENROUTER_API_KEY=${OPENROUTER_STAGING_API_KEY}
AUTH0_CLIENT_ID=${AUTH0_STAGING_CLIENT_ID}
AUTH0_DOMAIN=staging-tribe.auth0.com
STRIPE_PUBLISHABLE_KEY=${STRIPE_STAGING_PUBLISHABLE_KEY}
GOOGLE_PLACES_API_KEY=${GOOGLE_PLACES_STAGING_API_KEY}
FIREBASE_API_KEY=${FIREBASE_STAGING_API_KEY}
FIREBASE_APP_ID=${FIREBASE_STAGING_APP_ID}
FIREBASE_MESSAGING_SENDER_ID=${FIREBASE_STAGING_MESSAGING_SENDER_ID}
FIREBASE_PROJECT_ID=staging-tribe-app
EVENTBRITE_API_KEY=${EVENTBRITE_STAGING_API_KEY}
MEETUP_API_KEY=${MEETUP_STAGING_API_KEY}
OPENWEATHERMAP_API_KEY=${OPENWEATHERMAP_STAGING_API_KEY}

# Monitoring and Debugging
SENTRY_DSN=${SENTRY_STAGING_DSN}
ANALYTICS_ENABLED=true
ENABLE_API_MOCKING=false
ENABLE_CONSOLE_LOGS=true
ENABLE_DEBUG_TOOLS=true